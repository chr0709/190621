<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireWorkActivity">
<com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pullToRefresh"
    app:ptr_fireworkColors="@color/colorAccent"
    android:background="@color/colorPrimary"
    app:ptr_backgroundColor="@color/colorPrimaryDark"
    app:ptr_rocketAnimDuration="5000"
    app:ptr_fireworkStyle="modern"
    >
 <android.support.v7.widget.RecyclerView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/rl"
     ></android.support.v7.widget.RecyclerView>
</com.cleveroad.pulltorefresh.firework.FireworkyPullToRefreshLayout>
</LinearLayout>